<header id="content-header">
  <h1><%= pluralize(@users.size, 'User') %></h1>
</header>

<ul id="users">
  <% @users.each do |user| %>
    <li>
      <%= link_to user.name, user %> | <%= link_to "Promote", promote_path(user) %> | <%= link_to "Demote", demote_path(user) %>
    </li>
  <% end %>
</ul>
