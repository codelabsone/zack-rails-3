<header id="content-header">
  <h1><%= pluralize(@users.size, 'User') %></h1>
</header>

<ul id="users">
  <% @users.each do |user| %>
    <li>
      <%= link_to user.name, user %>
      <% if current_user_admin? %>
         | <%= link_to "Promote", promote_path(user) %>
         | <%= link_to "Demote", demote_path(user) %>
      <% end %>
    </li>
  <% end %>
</ul>
